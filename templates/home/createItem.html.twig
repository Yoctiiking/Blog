{% extends 'base.html.twig' %}

{% block title %}Blog - Nouveau{% endblock %}

{% block body %}
    <div class="container">
        <div class="form">
            {{ form_start(form) }}
            <div class="name-form">
                {{ form_row(form.name) }}
            </div>
            <div class="description-form">
                {{ form_row(form.description) }}
            </div>
            <div class="submit-form">
                {{ form_row(form.submit)}}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    
{% endblock %}
